@{
    ViewBag.Title = "Invite Error";
    Layout = "Dashboard/_Layout";
}

<div class="body-wrapper">
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-lg-6 col-xl-5">
                <div class="card shadow-lg">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <i class="ti ti-alert-triangle text-danger" style="font-size: 64px;"></i>
                        </div>
                        <h3 class="fw-bold mb-3">Oops!</h3>
                        <p class="text-muted mb-4">@ViewBag.ErrorMessage</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="StudyGroups" asp-action="AvailableStudyGroups" class="btn btn-primary">
                                <i class="ti ti-search me-2"></i>Browse Available Groups
                            </a>
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="ti ti-home me-2"></i>Go to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
