@{
    ViewBag.Title = "Available Subscription Plans";
    Layout = "Dashboard/_Layout";
}

@section Styles
{
    <link rel="stylesheet" href="~/modules/subscriptions/available_plans.css" asp-append-version="true" />
}

<div class="body-wrapper">
    <div class="container-fluid">
        <div class="card bg-info-subtle shadow-none position-relative overflow-hidden mb-4">
            <div class="card-body px-4 py-3">
                <div class="row align-items-center">
                    <div class="col-9">
                        <h4 class="fw-semibold mb-8">Subscription Plans</h4>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a class="text-muted text-decoration-none" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                                </li>
                                <li class="breadcrumb-item" aria-current="page">Subscription Plans</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-3">
                        <div class="text-center mb-n5">
                            <img src="~/templates/modernize/images/breadcrumb/ChatBc.png"
                                 alt=""
                                 class="img-fluid mb-n4" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="ti ti-check-circle fs-4 me-3"></i>
                    <div class="flex-grow-1">
                        <h5 class="alert-heading mb-1">✅ Success</h5>
                        <p class="mb-0">@TempData["SuccessMessage"]</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Context.Request.Query.ContainsKey("expired") && Context.Request.Query["expired"] == "true")
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="ti ti-alert-triangle fs-4 me-3"></i>
                    <div class="flex-grow-1">
                        <h5 class="alert-heading mb-1">⏰ Subscription Expired</h5>
                        <p class="mb-0">
                            @if (Context.Request.Query.ContainsKey("message"))
                            {
                                @Context.Request.Query["message"]
                            }
                            else
                            {
                                <text>Your subscription has expired. Please choose a plan to continue accessing the system.</text>
                            }
                        </p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="text-center mb-5">
                    <h2 class="fw-bold">Choose Your Plan</h2>
                    <p class="text-muted">Select the perfect subscription plan for your study needs</p>
                </div>

                <div class="row g-4" id="subscriptionPlans">
                    <!-- Plans will be loaded here via JavaScript -->
                </div>
            </div>
        </div>
    </div>
</div>

@section FooterScripts {
    <script src="~/modules/subscriptions/footer_available_plans.js" asp-append-version="true"></script>
}