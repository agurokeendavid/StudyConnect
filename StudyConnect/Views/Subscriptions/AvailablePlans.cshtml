@{
    ViewBag.Title = "Available Subscription Plans";
    Layout = "Dashboard/_Layout";
}

@section Styles
{
    <style>
        .subscription-card {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            transition: all 0.3s ease;
            height: 100%;
        }

        .subscription-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .subscription-card.featured {
            border-color: #5d87ff;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .subscription-card.featured .card-body {
            color: white;
        }

        .subscription-card.featured .price {
            color: white;
        }

        .subscription-card .price {
            font-size: 2.5rem;
            font-weight: 700;
            color: #5d87ff;
        }

        .subscription-card .duration {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .subscription-card.featured .duration {
            color: rgba(255, 255, 255, 0.8);
        }

        .feature-list {
            list-style: none;
            padding: 0;
            margin: 20px 0;
        }

        .feature-list li {
            padding: 10px 0;
            border-bottom: 1px solid #e9ecef;
        }

        .subscription-card.featured .feature-list li {
            border-bottom-color: rgba(255, 255, 255, 0.2);
        }

        .feature-list li:last-child {
            border-bottom: none;
        }

        .feature-list i {
            color: #28a745;
            margin-right: 10px;
        }

        .subscription-card.featured .feature-list i {
            color: #fff;
        }
    </style>
}

<div class="body-wrapper">
    <div class="container-fluid">
        <div class="card bg-info-subtle shadow-none position-relative overflow-hidden mb-4">
            <div class="card-body px-4 py-3">
                <div class="row align-items-center">
                    <div class="col-9">
                        <h4 class="fw-semibold mb-8">Subscription Plans</h4>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a class="text-muted text-decoration-none" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                                </li>
                                <li class="breadcrumb-item" aria-current="page">Subscription Plans</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-3">
                        <div class="text-center mb-n5">
                            <img src="~/templates/modernize/images/breadcrumb/ChatBc.png"
                                 alt=""
                                 class="img-fluid mb-n4" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Context.Request.Query.ContainsKey("expired") && Context.Request.Query["expired"] == "true")
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="ti ti-alert-triangle fs-4 me-3"></i>
                    <div class="flex-grow-1">
                        <h5 class="alert-heading mb-1">⏰ Subscription Expired</h5>
                        <p class="mb-0">
                            @if (Context.Request.Query.ContainsKey("message"))
                            {
                                @Context.Request.Query["message"]
                            }
                            else
                            {
                                <text>Your subscription has expired. Please choose a plan to continue accessing the system.</text>
                            }
                        </p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="text-center mb-5">
                    <h2 class="fw-bold">Choose Your Plan</h2>
                    <p class="text-muted">Select the perfect subscription plan for your study needs</p>
                </div>

                <div class="row g-4" id="subscriptionPlans">
                    <!-- Plans will be loaded here via JavaScript -->
                </div>
            </div>
        </div>
    </div>
</div>

@section FooterScripts {
    <script>
        $(document).ready(function () {
            loadSubscriptionPlans();
        });

        function loadSubscriptionPlans() {
            $.ajax({
                url: '@Url.Action("GetActiveSubscriptions", "Subscriptions")',
                type: 'GET',
                beforeSend: function () {
                    $('#subscriptionPlans').html('<div class="col-12 text-center"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>');
                },
                success: function (response) {
                    if (response.data && response.data.length > 0) {
                        renderSubscriptionPlans(response.data);
                    } else {
                        $('#subscriptionPlans').html('<div class="col-12 text-center"><p class="text-muted">No subscription plans available at the moment.</p></div>');
                    }
                },
                error: function () {
                    $('#subscriptionPlans').html('<div class="col-12 text-center"><p class="text-danger">Error loading subscription plans. Please try again later.</p></div>');
                }
            });
        }

        function renderSubscriptionPlans(plans) {
            let html = '';
            
            plans.forEach((plan, index) => {
                const isPremium = plan.HasUnlimitedAccess;
                const featuredClass = isPremium ? 'featured' : '';
                const price = plan.Price === 0 ? 'FREE' : `&#x20B1;${plan.Price.toFixed(2)}`;
                const duration = plan.DurationInDays === 1 ? '4 hours' : `${plan.DurationInDays} days`;
                const maxFiles = plan.MaxFileUploads === 0 ? 'Unlimited' : plan.MaxFileUploads;
                
                html += `
                    <div class="col-md-6">
                        <div class="card subscription-card ${featuredClass}">
                            ${isPremium ? '<div class="position-absolute top-0 end-0 m-3"><span class="badge bg-warning text-dark">Popular</span></div>' : ''}
                            <div class="card-body p-4">
                                <h3 class="card-title fw-bold mb-3">${plan.Name}</h3>
                                <div class="price mb-2">${price}</div>
                                <div class="duration mb-4">${duration}</div>
                                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                    <strong>Note:</strong> ${plan.WarningMessage}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                                <p class="card-text mb-4">${plan.Description}</p>
                                
                                <ul class="feature-list">
                                    <li>
                                        <i class="ti ti-check fs-5"></i>
                                        <strong>File Uploads:</strong> ${maxFiles} files
                                    </li>
                                    <li>
                                        <i class="ti ti-check fs-5"></i>
                                        <strong>Access Duration:</strong> ${duration}
                                    </li>
                                    <li>
                                        <i class="ti ti-check fs-5"></i>
                                        <strong>Study Groups:</strong> ${isPremium ? 'Unlimited access' : 'Limited access'}
                                    </li>
                                    <li>
                                        <i class="ti ti-check fs-5"></i>
                                        <strong>Features:</strong> ${isPremium ? 'All features' : 'Basic features'}
                                    </li>
                                </ul>
                                
                                <button class="btn ${isPremium ? 'btn-light' : 'btn-primary'} w-100 mt-3" onclick="selectPlan(${plan.Id}, '${plan.Name}')">
                                    <i class="ti ti-shopping-cart me-2"></i>
                                    Select Plan
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            $('#subscriptionPlans').html(html);
        }

        function selectPlan(planId, planName) {
            DevExpress.ui.notify({
                message: `You selected ${planName}. Subscription management coming soon!`,
                type: 'info',
                displayTime: 3000,
                position: {
                    my: 'top right',
                    at: 'top right',
                    offset: '-20 20'
                }
            });
            
            // TODO: Implement subscription purchase/activation
            console.log('Selected plan:', planId, planName);
        }
    </script>
}
