@{
    ViewData["Title"] = "Notifications";
    Layout = "Dashboard/_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title mb-0">
                            <i class="ti ti-bell me-2"></i>Notifications
                        </h4>
                        <div>
                            <button class="btn btn-sm btn-outline-primary" onclick="markAllNotificationsAsViewed()">
                                <i class="ti ti-check me-1"></i>Mark All as Read
                            </button>
                            <button class="btn btn-sm btn-outline-danger ms-2" onclick="deleteAllNotifications()">
                                <i class="ti ti-trash me-1"></i>Clear All
                            </button>
                        </div>
                    </div>

                    <div id="notificationsContainer">
                        <!-- Notifications will be loaded here -->
                    </div>

                    <div id="noNotifications" class="text-center py-5" style="display: none;">
                        <i class="ti ti-bell-off fs-1 text-muted"></i>
                        <h5 class="mt-3 text-muted">No Notifications</h5>
                        <p class="text-muted">You're all caught up!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section FooterScripts {
    <script src="~/modules/notifications/footer_index.js" asp-append-version="true"></script>
}
